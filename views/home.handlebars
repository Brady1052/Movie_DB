<div>
  {{#each movieInfo as |movie|}}
<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{movie_poster}}" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{movie_name}}</h5>
        <p class="card-text">{{genre}}</p>
        <p class="card-text">{{release_date}}</p>
      </div>
 
    </div>
  </div> 
  <div class="card-footer">
  <small class="text-muted"><a href='/review'>Click here for reviews!</a></small>
  </div>
</div>     
{{/each}}
</div>

