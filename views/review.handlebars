<div class='header-container'>
    <h1>{{movieInfo.movie_name}}</h1>
    <h2>{{movieInfo.genre}}</h2>
    <h3>{{movieInfo.release_date}}</h3>
</div>
<div class='poster-container'>
    <img src='{{movieInfo.movie_poster}}' class="card-img" style="border-right: solid 2px black; border-bottom: solid 2px black;">
    <input type="hidden" id="movie-id" data-id="{{movieInfo.id}}" />
</div>
<div class='review-container'>
    <div class='current-reviews'>
        <p>Reviews</p>
        {{#each reviewInfo as |review|}}
        <p>{{review.review_title}}</p>
        <p>"{{review.review_body}}"</p>
        {{/each}}
    </div>
    <div class='add-review-container'>
        <p>Add your review here:</p>
        <form class='new-review-form'>
            <label for='review-title' class='form-label'>Review Title:</label><br>
            <textarea id='review-title' class="form-control" name='review_title'>{{review_title}}</textarea><br>
            <label for='review-body' class='form-label'>Review:</label><br>
            <textarea id='review-body' class="form-control" name='review_body'>{{review_body}}</textarea><br>
            <label for='user-name' class='form-label'>Your Name:</label><br>
            <textarea id='user-name' class="form-control" name='user_name'>{{user_name}}</textarea><br>
            <button type='submit' value='submit'>Submit</button>
        </form>
    </div>
</div>
<script src='/js/addReview.js'></script>